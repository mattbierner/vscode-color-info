{
  "name": "color-info",
  "displayName": "Color Info",
  "description": "Provides quick information about css colors",
  "version": "0.6.1",
  "publisher": "bierner",
  "license": "MIT",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "keywords": [
    "color",
    "rgb",
    "css",
    "hsl",
    "cmyk"
  ],
  "icon": "media/logo.png",
  "galleryBanner": {
    "color": "#fefefe",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.8.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mattbierner/vscode-color-info.git"
  },
  "activationEvents": [
    "*",
    "onLanguage:css",
    "onLanguage:less",
    "onLanguage:sass"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Color-Info configuration",
      "properties": {
        "colorInfo.fields": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "alpha",
              "cmyk",
              "css-color-name",
              "hex",
              "hsl",
              "hsv",
              "lab",
              "lch",
              "preview-square-xl",
              "preview-square",
              "preview-xl",
              "preview",
              "rgb"
            ],
            "description": "Color field id."
          },
          "description": "Ordered list of color fields to display."
        },
        "colorInfo.excludedFields": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "alpha",
              "cmyk",
              "css-color-name",
              "hex",
              "hsl",
              "hsv",
              "lab",
              "lch",
              "preview-square-xl",
              "preview-square",
              "preview-xl",
              "preview",
              "rgb"
            ],
            "description": "Color field id"
          },
          "markdownDescription": "Fields not to display. Overrides `#colorInfo.fields#`."
        },
        "colorInfo.languages": {
          "type": "array",
          "default": [
            {
              "selector": "css",
              "colors": "css"
            },
            {
              "selector": "sass",
              "colors": "css"
            },
            {
              "selector": "scss",
              "colors": "css"
            },
            {
              "selector": "less",
              "colors": "css"
            }
          ],
          "items": {
            "type": "object",
            "properties": {
              "selector": {
                "type": [
                  "string",
                  "object"
                ],
                "markdownDescription": "Document selector for language or file. See https://code.visualstudio.com/Docs/extensionAPI/vscode-api#DocumentSelector"
              },
              "colors": {
                "type": [
                  "array",
                  "string"
                ],
                "default": "css",
                "description": "Types of colors to detect",
                "items": {
                  "enum": [
                    "css",
                    "hex",
                    "hex+alpha",
                    "rgb",
                    "hsl",
                    "css-color-names"
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "tslint -p ./"
  },
  "devDependencies": {
    "@types/color-convert": "^2.0.0",
    "@types/node": "^14.14.41",
    "@types/vscode": "^1.8.0",
    "tslint": "5.20.1",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "color-convert": "^2.0.1",
    "datauri": "^2.0.0",
    "pad": "^2.3.0",
    "tinycolor2": "^1.4.1"
  }
}
